<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatGPT Survey Helper</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; margin: 20px; }
        #chatbox { width: 80%; height: 400px; overflow-y: auto; border: 1px solid #ccc; padding: 10px; margin: auto; text-align: left; }
        #userInput { width: 70%; padding: 10px; margin-top: 10px; }
        button { padding: 10px; }
        .user { color: blue; font-weight: bold; }
        .bot { color: green; font-weight: bold; }
    </style>
</head>
<body>
    <h2>ChatGPT Survey Helper</h2>
    <div id="chatbox">
        <p><b>ChatGPT:</b> Hello! How can I assist you today?</p>
    </div>
    <input type="text" id="userInput" placeholder="Type your question...">
    <button onclick="sendMessage()">Send</button>

    <script>
        const apiKey = "YOUR_OPENAI_API_KEY"; // ðŸ”´ Replace with your API key (temporary!)
        let chatHistory = [];

        async function sendMessage() {
            const input = document.getElementById("userInput").value;
            if (!input) return;

            chatHistory.push({ role: "user", content: input });
            updateChatBox("user", input);

            document.getElementById("userInput").value = "";

            try {
                const response = await fetch("https://api.openai.com/v1/chat/completions", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        "Authorization": `Bearer ${apiKey}`
                    },
                    body: JSON.stringify({
                        model: "gpt-4",
                        messages: chatHistory
                    })
                });

                const data = await response.json();
                const reply = data.choices[0].message.content;
                chatHistory.push({ role: "assistant", content: reply });
                updateChatBox("bot", reply);
            } catch (error) {
                updateChatBox("bot", "Error: Could not connect to ChatGPT.");
            }
        }

        function updateChatBox(sender, message) {
            const chatbox = document.getElementById("chatbox");
            const newMessage = document.createElement("p");
            newMessage.innerHTML = `<b class="${sender}">${sender === "user" ? "You" : "ChatGPT"}:</b> ${message}`;
            chatbox.appendChild(newMessage);
            chatbox.scrollTop = chatbox.scrollHeight;
        }
    </script>
</body>
</html>
